#!/usr/bin/env sh

# Yabai configuration - converted from AeroSpace config
# Based on vim-style keybindings and tiling window management

# ====== Global settings ======

# Layout: bsp (binary space partition - similar to i3/aerospace)
yabai -m config layout bsp

# Window modifications
yabai -m config window_placement second_child

# Padding and gaps (matching AeroSpace: 15px)
yabai -m config top_padding    15
yabai -m config bottom_padding 15
yabai -m config left_padding   15
yabai -m config right_padding  15
yabai -m config window_gap     15

# Mouse settings
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse off

# Mouse modifier (hold alt to move/resize windows with mouse)
yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# Window behavior
yabai -m config window_topmost off
yabai -m config window_shadow float
yabai -m config window_opacity on
yabai -m config window_opacity_duration 0.0
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.95

# Split ratio
yabai -m config split_ratio 0.50
yabai -m config auto_balance off

# ====== Rules for specific apps ======

# iOS Simulator - force tiling
yabai -m rule --add app="^Simulator$" manage=on

# Float system preferences and similar apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off

echo "yabai configuration loaded.."
